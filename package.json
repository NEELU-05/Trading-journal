{
    "name": "trading-journal-desktop",
    "version": "1.0.0",
    "description": "Trading Journal Assistant - Desktop Application",
    "main": "electron.js",
    "scripts": {
        "install-all": "cd backend && npm install && cd ../frontend && npm install",
        "dev": "concurrently \"cd backend && npm run dev\" \"cd frontend && npm run dev\"",
        "build": "cd frontend && npm run build",
        "start": "cd backend && npm start",
        "electron": "electron .",
        "electron-dev": "concurrently \"cd backend && npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
        "pack": "electron-builder --dir",
        "dist": "npm run build && electron-builder"
    },
    "build": {
        "appId": "com.tradingjournal.app",
        "productName": "Trading Journal",
        "directories": {
            "output": "dist-electron"
        },
        "files": [
            "electron.js",
            "backend/**/*",
            "frontend/dist/**/*",
            "!backend/node_modules",
            "!backend/trading_journal.db"
        ],
        "extraResources": [
            {
                "from": "backend",
                "to": "backend",
                "filter": [
                    "**/*",
                    "!node_modules"
                ]
            }
        ],
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "assets/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    },
    "keywords": [
        "trading",
        "journal",
        "desktop"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "electron": "^33.4.0",
        "electron-builder": "^25.2.0",
        "wait-on": "^8.0.1"
    }
}